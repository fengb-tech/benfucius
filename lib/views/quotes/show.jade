extends ../layout.jade

block content
  h1 Benfucius says
  blockquote= quote.get('text')

  form(method='POST' action="/quotes/#{quote.get('id')}/vote")
    span.votes= quote.get('positive_votes') || 0
    input(type='hidden' name='value' value='+')
    button Wise

  form(method='POST' action="/quotes/#{quote.get('id')}/vote")
    span.votes= quote.get('negative_votes') || 0
    input(type='hidden' name='value' value='-')
    button Lies

  form(method='POST' action="/quotes/#{quote.get('id')}/vote")
    input(type='hidden' name='value' value='!')
    button NOT A QUOTE

  a(href='/quotes/new') Submit a new quote
