extends ../layout.jade

block content
  h1 Benfucius says
  div.quote
    blockquote.quote-text= quote.get('text')

    form.vote.positive(method='POST' action="/quotes/#{quote.get('id')}/vote")
      span= quote.get('positive_votes') || 0
      input(type='hidden' name='value' value='+')
      button Wise

    form.vote.negative(method='POST' action="/quotes/#{quote.get('id')}/vote")
      span= quote.get('negative_votes') || 0
      input(type='hidden' name='value' value='-')
      button Lies

    form.vote.fail(method='POST' action="/quotes/#{quote.get('id')}/vote")
      input(type='hidden' name='value' value='!')
      button NOT A QUOTE

  a(href='/quotes/new') Submit a new quote
